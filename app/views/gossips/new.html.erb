<body>
  <% if flash[:danger] %>
    <div class="alert alert-danger">
      <%= flash[:danger] %>
    </div>
  <% end %>
  <div class="container mt-5">
    <h1 class="mb-4">Nouveau Gossip</h1>
    <%= form_tag gossips_path do %>
      <div class="form-group">
        <%= label_tag :title, "Titre du Gossip" %>
        <%= text_field_tag 'gossip[title]', nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :user_id, "Author" %>
        <%= select_tag 'gossip[user_id]', options_for_select(User.all.collect { |u| [u.first_name, u.id] }), class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :description, "Contenu du Gossip" %>
        <%= text_area_tag 'gossip[description]', nil, class: 'form-control' %>
      </div>
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <%= submit_tag "CrÃ©er le Gossip", class: 'btn btn-dark' %>
    <% end %>
  </div>
</body>
</html>
