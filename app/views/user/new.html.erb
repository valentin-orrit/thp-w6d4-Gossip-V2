<html>
<body>
  <% if flash[:danger] %>
    <div class="alert alert-danger">
      <%= flash[:danger] %>
    </div>
  <% end %>
  
  <div class="container mt-5">
    <h1 class="mb-4">Sign Up</h1>
    <%= form_tag user_index_path, method: :post do %>
      <div class="form-group">
        <%= label_tag :email, "Email" %>
        <%= email_field_tag 'user[email]', nil, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :first_name, "First Name" %>
        <%= text_field_tag 'user[first_name]', nil, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :last_name, "Last Name" %>
        <%= text_field_tag 'user[last_name]', nil, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :age, "Age" %>
        <%= text_field_tag 'user[age]', nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :city_id, "City-ID" %>
        <%= text_field_tag 'user[city_id]', nil, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :password, "Password" %>
        <%= password_field_tag 'user[password]', nil, class: 'form-control' %>
      </div>

      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <%= submit_tag "Sign Up", class: 'btn btn-dark' %>
    <% end %>
  </div>

</body>
</html>